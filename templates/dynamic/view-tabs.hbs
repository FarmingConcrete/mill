<ul class="nav nav-tabs" role="tablist">
    {{#each metrics}}
    <li role="presentation">
        <a href="#{{slug}}" role="tab" data-toggle="tab">{{name}}</a>
    </li>
    {{/each}}
</ul>

<div class="tab-content">
    {{#each metrics}}
    <div role="tabpanel" class="tab-pane" id="{{slug}}">
        <div class="metric-tab-row">
            <div class="metric-tab-table">
                <table cellpadding="0" cellspacing="0" border="0" class="metric-table" height="100%"></table>
            </div>
            <div class="metric-tab-chart">
                <div class="chart"></div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
